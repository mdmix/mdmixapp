<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <br>
      <%#= f.label :body, "Comments" %>
      <br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
      <%#= f.label :rating %>
      <%#= f.text_field :rating, class: "rating" %>
      <br>
    </p>
    <p>
      <%= f.submit "Submit", :id => "submit-review" %>
    </p>
  <% end %>
<% end %>
