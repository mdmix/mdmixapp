<h2>Forgot your password?</h2>

<form id="forgot-password">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "label-email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "reset" %>
  </div>
<% end %>
</form><!-- end forgot password -->

<div class="access-click">
  <%= render "devise/shared/links" %>
</div>
