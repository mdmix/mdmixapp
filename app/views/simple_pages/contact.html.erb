<section>
  <p>We can always easily, quickly play around together with the app.</p>
</section>
<br>
<br>


<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", id:"contact-form", method: "post", local: true) do |form| %>
<div class="row">
  <div class="form-group">
    <%= form.label :name, class:"contact-label" %>
    <%= form.text_field :name, class: "form-control", id: "contact-name", placeholder: "Enter Name", required: true, type: "text" %>
  </div>
  <div class="form-group">
    <%= form.label :email, class:"contact-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: true, type: "email" %>
  </div>
  <div class="form-group">
    <%= form.label :message, class:"contact-label" %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5, required: true, type:"text", minlength: 10, maxlength: 250 %>
  </div>
</div>
<%= form.submit "Send", class: "form_label" %>
<% end %>
